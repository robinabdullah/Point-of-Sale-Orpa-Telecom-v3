<Window x:Class="Point_of_Sale_Orpa_Telecom_v3.PL.Reports"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Point_of_Sale_Orpa_Telecom_v3.PL"
        mc:Ignorable="d"
        Title="Reports" Height="486.72" Width="750" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel  HorizontalAlignment="Left" Height="318" Margin="76,48,0,0" VerticalAlignment="Top" Width="570">
            <Button x:Name="stockQuantity" Content="All Products Stock Summary (Short)" Click="stockQuantity_Click" Height="31" FontSize="14"/>
            <Separator Opacity="0" Height="5"/>
            <Button x:Name="stockQuantity_Copy" Content="All Products Stock Summary" Click="stockSummaryFull_Click" Height="31" FontSize="14"/>
            <Separator Opacity="0" Height="5"/>
            <Button x:Name="stockQuantity_Copy1" Content="Date Wise Sales (Adding Discount)" Click="dateWiseSales1_Click" Height="31" FontSize="14"/>
            <Separator Opacity="0" Height="5"/>
            <Button x:Name="stockQuantity_Copy3" Content="Date Wise Sales" Click="dateWiseSales2_Click" Height="31" FontSize="14"/>
            <Separator Opacity="0" Height="5"/>
            <Button x:Name="stockQuantity_Copy2" Content="Promotional Event" Click="promotionalEventSales_Click" Height="31" FontSize="14"/>
            <Separator Opacity="0" Height="5"/>
            <Button x:Name="stock_Copy8" Content="Date Wise Stock (Mobile)" Click="dateWise_Stock_Click" Height="31" FontSize="14"/>
            <Separator Opacity="0" Height="5"/>
            <Button x:Name="stockQuantity_Copy4" Content="Print Previous Invoice" Click="Print_Previous_Invoice_Click" Height="31" FontSize="14"/>
            <Separator Opacity="0" Height="5"/>
            <Button x:Name="exit" Content="Exit" Click="exit_Click" Height="31" FontSize="14" IsCancel="True"/>
        </StackPanel>
        <TextBox x:Name="invoiceTextBox" HorizontalAlignment="Left" Height="23" Margin="200,404,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174" Visibility="Hidden"/>
        <Button x:Name="invoiceFindNPrintPreview" Content="Find and Preview"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="400,404,0,0" Height="23" Click="find_and_print_preview" Visibility="Hidden"/>
    </Grid>
</Window>
